@page
@model Library.Pages.CreateBookModel
@{
    ViewData["Title"] = "New Book";
}


<form method="post" class="w-100">
    <div class="form-group">
        <label asp-for="@Model.Book.Title">Book Title</label>
        <input type="text" class="form-control" asp-for="@Model.Book.Title">
        <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.Author">Author</label>
        <input type="text" class="form-control" asp-for="@Model.Book.Author">
        <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.Image">Image URL</label>
        <input type="text" class="form-control" asp-for="@Model.Book.Image">
        <span asp-validation-for="@Model.Book.Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Book.Description">Description</label>
        <textarea class="form-control" asp-for="@Model.Book.Description"></textarea>
        <span asp-validation-for="@Model.Book.Description" class="text-danger"></span>
    </div>



    <button type="button" class="btn btn-secondary" onclick="returnToDefaultPage()">Cancel</button>
    <button type="submit" class="btn btn-primary">Add Book</button>
</form>
