@{
    ViewData["SuccessMessage"] = TempData["SuccessMessage"];
    var currentPath = Context.Request.Path.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Library.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/fcf3732c35.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <div class="d-flex flex-sm-row align-items-center">
                    <img src="https://cdn-icons-png.flaticon.com/512/2232/2232588.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    <a class="navbar-brand ms-2" asp-area="" asp-page="/">Library</a>
                </div>
                <button class="navbar-toggler p-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse ms-1" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Books">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Users">Users</a>
                        </li>
                        
                    </ul>
                    <div class="container button-navbar">
                        <a type="button" class="btn btn-warning" asp-page="CreateBook">@(currentPath == "/" ? "Add a new book" : "Create a new user")</a>
                    </div>

                </div>
               
            </div>
             
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- success message -->
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success justify-content-center w-50" id="success" style="margin-left:25%; position:fixed; bottom:0px; z-index:1" role="alert">
            A new book was added successfully!
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Library
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/search.js" asp-append-version="true"></script>"
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>