@page
@model IndexModel
@{
    ViewData["Title"] = "Book List";
}
<div class="form-group containerBody">
    <div class="input-group">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
        <input type="text" id="Search" placeholder="Search a book" class="form-control" />
    </div>
</div>
<div class="containerBody mt-2">

    <div class="card-columns ">
        @foreach (var book in Model.Books)
        {
            <div class="card mb-3 w-100 border-2 shadow-lg">
                <div class="row g-0">
                    <div class="col-md-2">
                        <img src="@book.Image" class="img-fluid rounded-start" alt="..." style="max-height:300px; max-width:100%">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title book-title">@book.Title</h5>
                            <p class="card-text"><small class="text-body-secondary">@book.Author</small></p>
                            <p class="card-text">@book.Description</p>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
